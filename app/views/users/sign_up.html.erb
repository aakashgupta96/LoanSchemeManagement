<div class="sign_form">
	<%= form_for(@user, url: url_for(action: 'create', controller: 'users')) do |f| %>
	<center><h1 style="color:#333e93">SIGNUP</h1></center><br><br>
	<div class="form-group">
    	<label class="control-label col-sm-2" for="email" ><b>Email: </b></label>
    	<div class="col-sm-10">
	<%= f.email_field :email, required: true %> </br>
	</div>
  	</div>
  	<div class="form-group">
    	<label class="control-label col-sm-2" for="pwd"><b>Password: </b></label>
    	<div class="col-sm-10">
	<%= f.password_field :password, required: true %> </br>
</div>
  </div>
  <div class="form-group">
	<label class="control-label col-sm-4" for=""> </label>
    	<div class="col-sm-8">
	<%= f.label :disbaled, "Scheme Provider:" %>
	<%= f.check_box :disabled, default: false %><span class="slider round"></span>
	</div>
  </div>
  <div class="form-group">
	<label class="control-label col-sm-4" for=""> </label>
    	<div class="col-sm-8">
	<center><%= f.submit "SIGNUP",class: "btn btn-primary" %></center>
</div>
</div>
<% end %>
</div>