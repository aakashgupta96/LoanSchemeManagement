<% if @over_ten %>
   <%= link_to 'Show Previous', '?m=all' %>
<% end %>

<% ticket = @ticket %>
		<% if ticket.new_ticket? %>
				<%= link_to "Open", open_change_status_ticket_path(@ticket.id),method: :post %>
				<%= link_to "Resolved", resolved_change_status_ticket_path(@ticket),method: :post %>
				<%= link_to "Escalated", escalated_change_status_ticket_path(@ticket.id),method: :post %>
		<% elsif ticket.open? %>
				<%= link_to "Resolved", resolved_change_status_ticket_path(@ticket.id),method: :post %>
				<%= link_to "Escalated", escalated_change_status_ticket_path(@ticket.id),method: :post %>
		<% end %> 

<ul>
<% @messages.each do |message| %>
	<% if message.body %>
	<li>
		
		<% user = User.find(message.user_id) %>
		<%= user.email %>
		<br>
		<%= message.body %>
	<% end %>
</li>
<% end %>
</ul>



<%= link_to "All Tickets", tickets_path %>