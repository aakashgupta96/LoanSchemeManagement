<%= form_for(@scheme,url: url_for(controller: "schemes", action: "create")) do |f| %>
	
	<%= f.hidden_field :department_id, value: @department.id %>
	<%= f.label :name, "Name of Scheme" %>
	<%= f.text_field :name, required: true %>
	<br>

	<%= f.label :guidelines, "Guidelines for scheme" %>
	<%= f.text_field :guidelines %>
	<br>

	<%= f.fields_for :eligibilities do |builder| %>
		<%= render "/shared/eligibility_fields", :f => builder %>
  <% end %>

	<p><%= link_to_add_fields "Add eligibility", f, :eligibilities %></p>

	<%= f.submit %>

<% end %>